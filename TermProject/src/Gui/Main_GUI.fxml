<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
	prefWidth="900.0" style="-fx-background-color: white;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.Main_Controller">
	<children>
		<HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
			<children>
				<Button fx:id="mainbutton" alignment="CENTER"
					mnemonicParsing="false" onAction="#mainAction"
					style="-fx-text-fill: #3065AC; -fx-background-color: white;"
					text="HelloBooks">
					<font>
						<Font name="Trebuchet MS Bold" size="48.0" />
					</font>
					<HBox.margin>
						<Insets right="25.0" />
					</HBox.margin>
				</Button>
				<TextField fx:id="searchField" prefHeight="35.0"
					prefWidth="400.0" promptText="검색">
					<font>
						<Font size="14.0" />
					</font>
				</TextField>
				<Button fx:id="searchButton" mnemonicParsing="false"
					onAction="#serachAction" prefHeight="35.0" prefWidth="90.0"
					style="-fx-text-fill: white; -fx-background-color: #3065AC;"
					text="Search">
					<HBox.margin>
						<Insets left="5.0" />
					</HBox.margin>
					<font>
						<Font name="Trebuchet MS Bold" size="14.0" />
					</font>
				</Button>
			</children>
			<VBox.margin>
				<Insets />
			</VBox.margin>
		</HBox>
		<HBox prefHeight="500.0" prefWidth="900.0" spacing="10.0">
			<children>
				<VBox prefHeight="200.0" prefWidth="400.0">
					<children>
						<HBox alignment="CENTER" prefHeight="500.0" prefWidth="200.0"
							style="-fx-background-color: #e8f5ff;">
							<children>
								<Button fx:id="left" mnemonicParsing="false"
									onAction="#goLeftAction" prefHeight="50.0"
									style="-fx-text-fill: #3065AC; -fx-background-color: #e8f5ff;"
									text="&lt;">
									<font>
										<Font size="18.0" />
									</font>
								</Button>
								<VBox alignment="CENTER" prefHeight="200.0"
									prefWidth="350.0">
									<children>
										<ImageView fx:id="adPicture" fitHeight="300.0"
											fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
										<Label fx:id="adExplain" alignment="CENTER"
											prefHeight="150.0" prefWidth="300.0"
											style="-fx-text-fill: #3065AC;">
											<font>
												<Font name="Trebuchet MS Bold" size="14.0" />
											</font>
										</Label>
									</children>
								</VBox>
								<Button fx:id="right" mnemonicParsing="false"
									onAction="#goRightAction" prefHeight="50.0"
									style="-fx-text-fill: #3065AC; -fx-background-color: #e8f5ff;"
									text="&gt;">
									<font>
										<Font size="18.0" />
									</font>
								</Button>
							</children>
							<VBox.margin>
								<Insets bottom="5.0" left="10.0" />
							</VBox.margin>
						</HBox>
					</children>
				</VBox>
				<VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0"
					spacing="10.0" style="-fx-background-color: #e8f5ff;">
					<children>
						<Label style="-fx-text-fill: #3065AC;" text="New Books">
							<font>
								<Font name="Trebuchet MS Bold" size="14.0" />
							</font>
						</Label>
						<ListView fx:id="newBookField" prefHeight="200.0"
							prefWidth="200.0">
							<VBox.margin>
								<Insets left="5.0" right="5.0" />
							</VBox.margin>
						</ListView>
						<Label style="-fx-text-fill: #3065AC;" text="Best Seller">
							<font>
								<Font name="Trebuchet MS Bold" size="14.0" />
							</font>
						</Label>
						<ListView fx:id="bestSellerField" prefHeight="200.0"
							prefWidth="200.0">
							<VBox.margin>
								<Insets left="5.0" right="5.0" />
							</VBox.margin>
						</ListView>
					</children>
					<HBox.margin>
						<Insets bottom="5.0" />
					</HBox.margin>
				</VBox>
				<VBox alignment="TOP_CENTER" prefHeight="200.0"
					prefWidth="200.0" spacing="5.0"
					style="-fx-background-color: #e8f5ff;">
					<children>
						<Button fx:id="BooksalesButton" mnemonicParsing="false"
							onAction="#salesAction" prefHeight="40.0" prefWidth="180.0"
							style="-fx-text-fill: white; -fx-background-color: #3065AC;"
							text="Book Sales">
							<font>
								<Font name="Trebuchet MS Bold" size="14.0" />
							</font>
							<VBox.margin>
								<Insets bottom="30.0" top="6.0" />
							</VBox.margin>
						</Button>
						<Label fx:id="userName" alignment="CENTER"
							style="-fx-text-fill: #3065AC;" text="이름">
							<font>
								<Font name="Trebuchet MS Bold" size="14.0" />
							</font>
							<VBox.margin>
								<Insets bottom="5.0" />
							</VBox.margin>
						</Label>
						<Label fx:id="userId" alignment="CENTER"
							style="-fx-text-fill: #3065AC;" text="아이디">
							<font>
								<Font name="Trebuchet MS Bold" size="14.0" />
							</font>
						</Label>
						<Label fx:id="lendOK" alignment="CENTER"
							style="-fx-text-fill: #3065AC;" text="대출 가능 여부">
							<font>
								<Font name="Trebuchet MS Bold" size="14.0" />
							</font>
						</Label>
						<HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0"
							spacing="6.0">
							<children>
								<Button fx:id="logoutButton" mnemonicParsing="false"
									onAction="#logoutAction" prefWidth="86.0"
									style="-fx-text-fill: white; -fx-background-color: #3065AC;"
									text="LogOut">
									<font>
										<Font name="Trebuchet MS Bold" size="14.0" />
									</font>
								</Button>
								<Button fx:id="myInfoButton" mnemonicParsing="false"
									onAction="#myInfoAction" prefWidth="86.0"
									style="-fx-text-fill: white; -fx-background-color: #3065AC;"
									text="My Info">
									<font>
										<Font name="Trebuchet MS Bold" size="14.0" />
									</font>
								</Button>
							</children>
							<VBox.margin>
								<Insets top="5.0" />
							</VBox.margin>
						</HBox>
						<Button fx:id="mybooklistButton" mnemonicParsing="false"
							onAction="#mybooklistAction" prefHeight="30.0" prefWidth="180.0"
							style="-fx-background-color: #3065AC; -fx-text-fill: white;"
							text="MyBookList">
							<font>
								<Font name="Trebuchet MS Bold" size="14.0" />
							</font>
							<VBox.margin>
								<Insets bottom="20.0" />
							</VBox.margin>
						</Button>
						<HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0"
							spacing="6.0">
							<children>
								<Button fx:id="wishlistButton" mnemonicParsing="false"
									onAction="#wishlistAction" prefWidth="86.0"
									style="-fx-background-color: #3065AC; -fx-text-fill: white;"
									text="WishList">
									<font>
										<Font name="Trebuchet MS Bold" size="14.0" />
									</font>
								</Button>
								<Button fx:id="borrowedButton" mnemonicParsing="false"
									onAction="#borrowButton" prefWidth="86.0"
									style="-fx-background-color: #3065AC; -fx-text-fill: white;"
									text="Borrowed">
									<font>
										<Font name="Trebuchet MS Bold" size="14.0" />
									</font>
								</Button>
							</children>
							<VBox.margin>
								<Insets top="5.0" />
							</VBox.margin>
						</HBox>
						<ListView fx:id="listField" prefHeight="200.0"
							prefWidth="200.0">
							<VBox.margin>
								<Insets left="5.0" right="5.0" />
							</VBox.margin>
						</ListView>
					</children>
					<HBox.margin>
						<Insets bottom="5.0" right="10.0" />
					</HBox.margin>
				</VBox>
			</children>
		</HBox>
	</children>
</VBox>
